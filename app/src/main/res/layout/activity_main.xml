<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.android.fuelapp.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:layout_weight="1"
        android:text="₹800"
        android:id="@+id/current_fuel_cost"
        android:gravity="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:fontFamily="monospace"/>


    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="_______________________________________"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹500"
            android:drawableLeft="@drawable/ic_fav_icon"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="30sp"
            android:padding="10dp"
            android:layout_gravity="top|center_horizontal"
            android:id="@+id/favourite_fuel_cost"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favourite"
                android:textSize="30sp"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:padding="10dp"/>


            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹300"
            android:drawableLeft="@drawable/ic_most_times_icon"
            android:layout_weight="1"
            android:padding="10dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_gravity="top|center_horizontal"
            android:id="@+id/most_used_fuel_cost"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Most Times"
                android:textSize="30sp"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:padding="10dp"/>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹400"
            android:drawableLeft="@drawable/ic_previous_icon"
            android:padding="10dp"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_gravity="top|center_horizontal"
            android:id="@+id/last_fuel_cost"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Previous Time"
                android:textSize="30sp"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:padding="10dp"/>


        </LinearLayout>
    </LinearLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fill Up"
        android:textSize="30sp"
        android:padding="10dp"
        android:textAllCaps="false"
        android:drawableLeft="@drawable/ic_fuel_icon"
        android:layout_gravity="bottom|center_horizontal"/>


</LinearLayout>
